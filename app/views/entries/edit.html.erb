<html data-turbo="false">
    <%= form_with model: @entry do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :header %>
        <%= f.text_field :header %>

        <%= f.label :content %>
        <%= f.text_area :content%>
        
        <%= f.submit "Zapisz" %>
    <% end %>
    <%= link_to 'Anuluj', entries_path %>
</html>